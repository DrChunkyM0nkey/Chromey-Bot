client.on('message', message => {
    if(message.content === '!help') {
        if(message.author.bot) return; {

    
    let embed = new MessageEmbed()

    .setTitle('Chromey Help')

    .setColor('#8050F0')

    .setImage('https://media.discordapp.net/attachments/730996281123799090/796176295511326760/standard.gif')

    .setThumbnail('https://cdn.discordapp.com/attachments/701632229461196911/796194975926714408/Chromey.gif')



    .setDescription('```!help [command]``` \n __**ðŸ› Moderation**__  - Shows help for moderation! \n __**ðŸ“¨Support**__ - Shows help for support \n __**ðŸ˜‚Fun**__ - Shows help for fun \n ```!help mod \n!help support \n!help fun``` \n __**Want in depth help?**__ \n [Website](https://chromey.godaddysites.com) | [Discord](https://discord.gg/H5pzsJJFMn)\n **Tip:** Use ``!commands-all`` to see all of my commands!')

    .setFooter('Pfp & Gif by MrTurtle#2568    ')
message.channel.send(embed);
        }
    }
    
}
    if(message.content === '!help mod') {
    

        let embed = new MessageEmbed()


        .setTitle('Moderation Help')

        .setColor('#D1DFE4')

        .setThumbnail('https://cdn.discordapp.com/attachments/701632229461196911/796194975926714408/Chromey.gif')


